<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="switcherStyle">

        <item name="colorOnSurface"> @color/black </item>
        <item name="colorOnSecondary">@color/purple_700</item>

    </style>

    <style name="setting_titles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/big_margin</item>
        <item name="android:drawablePadding">@dimen/normal_margin</item>
        <item name="android:textSize">@dimen/big_txt</item>
        <item name="android:background">@color/light_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#B3D8D8D8</item>
    </style>

    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/veryBig_margin</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/veryBig_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_txt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle_style">
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:lineHeight" tools:targetApi="p">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="language_radio_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
        <item name="android:textSize">@dimen/normal_txt_size</item>
    </style>

    <style name="daysStyle">
        <item name="android:textSize">@dimen/days_txt_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="buttonTint">@color/white</item>-->
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title_setting_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="daysHour_layoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="hour_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dark_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="days_row_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="rows_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/re_little_txt_size</item>
    </style>

    <style name="switcher_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Custom</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:scaleX">1.2</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditTextStyle" parent="hour_style">
        <item name="android:gravity">start</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="event_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">@dimen/re_little_txt_size</item>
    </style>

    <style name="floating_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/custom_yellow</item>
        <item name="android:layout_marginBottom">@dimen/veryBig_margin</item>
    </style>

</resources>