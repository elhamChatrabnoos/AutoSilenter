<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back11"
    android:id="@+id/mainLayout"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fabCradleMargin="@dimen/normal_margin"
            app:fabCradleRoundedCornerRadius="@dimen/normal_margin"
            app:fabCradleVerticalOffset="0dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/dark_color"
            app:hideOnScroll="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                app:itemTextColor="@color/white"
                app:itemIconTint="@color/white"
                app:menu="@menu/bottom_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/custom_yellow"
            android:src="@drawable/add_icon"
            app:elevation="1dp"
            app:layout_anchor="@id/bottomAppBar"
            android:contentDescription="TODO" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/quickSilent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/quick_txt_backg"
        android:paddingEnd="@dimen/big_margin"
        android:paddingTop="@dimen/normal_margin"
        android:paddingBottom="@dimen/normal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/topGuid"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/mute_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mute_icon"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/midG"/>

        <TextView
            android:id="@+id/txt_quickSilent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/quickSilent_txt"
            android:textColor="@color/quick_txt_color"
            android:textSize="@dimen/text_size1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/mute_img"
            app:layout_constraintTop_toTopOf="@id/midG" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/midG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <!--        <TextView-->
        <!--            android:id="@+id/silent_duration_txt"-->
        <!--            android:layout_width="1dp"-->
        <!--            android:layout_height="18dp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:textColor="@color/quick_txt_color"-->
        <!--            android:textSize="@dimen/little_txt"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/txt_quickSilent" />-->

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/quick_on"
            style="@style/switcher_style"
            app:layout_constraintStart_toStartOf="@id/rightGu"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/recyclerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/quickSilent_layout"
        app:layout_constraintStart_toEndOf="@id/botLeftGuid"
        app:layout_constraintEnd_toEndOf="@id/botRightGuid"
        app:layout_constraintBottom_toTopOf="@id/bottomGuid">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layoutDirection="rtl"
            android:padding="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/helpLayout"
        style="@style/layout_style"
        android:visibility="invisible"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/help_title1"
            android:text="@string/help_title1"
            style="@style/title_style" />

        <TextView
            android:id="@+id/sub_title1"
            android:text="@string/subText_title1"
            style="@style/subtitle_style" />

        <TextView
            android:id="@+id/help_title2"
            android:text="@string/help_title2"
            style="@style/title_style" />

        <TextView
            android:id="@+id/sub_title2"
            style="@style/subtitle_style"
            android:text="@string/sub_title2" />

        <TextView
            android:id="@+id/help_title3"
            android:text="@string/help_title3"
            style="@style/title_style" />

        <TextView
            android:id="@+id/sub_title3"
            style="@style/subtitle_style"
            android:text="@string/sub_title3" />

    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/setting_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/layout_style">

        <TextView
            android:id="@+id/setNotification"
            android:text="@string/setting_notify"
            android:drawableStart="@drawable/ic_baseline_notifications_24"
            tools:ignore="UseCompatTextViewDrawableXml"
            style="@style/setting_titles" />

        <LinearLayout style="@style/separate_line" />
                <TextView
                    android:id="@+id/setLanguage"
                    style="@style/setting_titles"
                    android:text="@string/setting_language"
                    android:drawableStart="@drawable/language_icon"
                    tools:ignore="UseCompatTextViewDrawableXml" />

        <LinearLayout style="@style/separate_line" />

        <TextView
            android:id="@+id/setAboutApp"
            style="@style/setting_titles"
            android:text="@string/setting_aboutApp"
            android:drawableStart="@drawable/aboutapp_icon"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <LinearLayout style="@style/separate_line" />


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/botRightGuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/botLeftGuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
